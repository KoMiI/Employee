<Page x:Class="Employee.TimeSheet.CreateTimeSheetPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee.TimeSheet"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="CreateTimeSheetWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10">
            <TabItem Header="Шапка табеля">
                <Grid Background="#FFE5E5E5" MinHeight="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="1" Grid.Column="0" Content="Подразделение" HorizontalAlignment="Center" Margin="5"/>

                    <ComboBox Grid.Column="1" Grid.Row="1" MinWidth="300" Margin="5" x:Name="UnitComboBox">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="local:Unit">
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Label Content="Номер документа" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <TextBox x:Name="NumberDocumentTextBox" Grid.Row="0" Grid.Column="1" ToolTip="Введите номер документа" Margin="5" Height="25"/>

                    <Label Content="Дата составления" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" Margin="5"/>
                    <DatePicker x:Name="SostavDatePicker" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Stretch" Margin="5"/>

                    <Label Content="Отчетный период" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="5"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5">
                        <Label Content="С" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0"/>
                        <DatePicker x:Name="FromDatePicker" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" Margin="5">
                        <Label Content="По" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <DatePicker x:Name="ToDatePicker" HorizontalAlignment="Center" Margin="10,0,10,0" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Учет рабочего времени">
                <Grid Background="#FFE5E5E5" MinHeight="400">
                    <DataGrid x:Name="DataGrid" 
                              AutoGenerateColumns="False"
                              HorizontalAlignment="Stretch"
                              Margin="10,10,10,20"
                              VerticalAlignment="Stretch">
                        <DataGrid.Resources>
                            <ContextMenu x:Key="RowMenu" 
                                         DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                <MenuItem Header="Удалить" Click="DeleteStringItem_OnClick"/>
                            </ContextMenu>
                        </DataGrid.Resources>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow" >
                                <Setter Property="ContextMenu" Value="{StaticResource RowMenu}" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="ФИО, Должность, Табельный номер">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox x:Name="FioComboBox" Loaded="FrameworkElement_OnLoaded" SelectionChanged="FioComboBox_OnSelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate DataType="local:PersonalCard">
                                                    <Grid>
                                                        <TextBlock Text="{Binding DisplayString}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Отметки о явках и неявках на работу по числам месяца">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <DataGrid x:Name="DayDataGrid"
                                                  ItemsSource="{Binding Path=Days}"
                                                  AutoGenerateColumns="False">
                                            <DataGrid.Resources>
                                                <ContextMenu x:Key="RowMenu" 
                                                             DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                                    <MenuItem Header="Удалить" Click="MenuItem_OnClick"/>
                                                </ContextMenu>
                                            </DataGrid.Resources>
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow" >
                                                    <Setter Property="ContextMenu" Value="{StaticResource RowMenu}" />
                                                </Style>
                                            </DataGrid.RowStyle>
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="Дата">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <DatePicker SelectedDate="{Binding Date}"></DatePicker>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridComboBoxColumn Header="Код" SelectedItemBinding="{Binding Path=DayType}">
                                                    <DataGridComboBoxColumn.ItemsSource>
                                                        <col:ArrayList>
                                                            <sys:String>Я</sys:String>
                                                            <sys:String>Н</sys:String>
                                                            <sys:String>РВ</sys:String>
                                                            <sys:String>С</sys:String>
                                                            <sys:String>ВМ</sys:String>
                                                            <sys:String>К</sys:String>
                                                            <sys:String>ПК</sys:String>
                                                            <sys:String>ПМ</sys:String>
                                                            <sys:String>ОТ</sys:String>
                                                            <sys:String>ОД</sys:String>
                                                            <sys:String>ОП</sys:String>
                                                        </col:ArrayList>
                                                    </DataGridComboBoxColumn.ItemsSource>
                                                </DataGridComboBoxColumn>
                                                <DataGridTextColumn Header="Количество часов" Binding="{Binding Path=DurationWork}"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="290">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" >
                                                <TextBlock Text="дней" HorizontalAlignment="Center"/>
                                            </Border>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" >
                                                <TextBlock Text="часов" HorizontalAlignment="Center" />
                                            </Border>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"   >
                                                <TextBlock Text="всего" HorizontalAlignment="Center"/>
                                            </Border>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" >
                                                <TextBlock  Text="из них" HorizontalAlignment="Center"/>
                                            </Border>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Row="2" Grid.Column="2"  >
                                                <TextBlock Text="сверхурочно" HorizontalAlignment="Center"/>
                                            </Border>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Row="2" Grid.Column="3" >
                                                <TextBlock  Text="ночных" HorizontalAlignment="Center" />
                                            </Border>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Row="2" Grid.Column="4" >
                                                <TextBlock Text="выходных" HorizontalAlignment="Center" />
                                            </Border>
                                        </Grid>
                                    </DataTemplate>

                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" Text="{Binding Result.DayWork}"/>
                                            <TextBox Grid.Column="1" Text="{Binding Result.HoursWork}"/>
                                            <TextBox Grid.Column="2" Text="{Binding Result.HoursOverwork}"/>
                                            <TextBox Grid.Column="3" Text="{Binding Result.NightHours}"/>
                                            <TextBox Grid.Column="4" Text="{Binding Result.Holydays}"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Column="0" >
                                                <TextBlock Text="код" HorizontalAlignment="Center" />
                                            </Border>
                                            <Border BorderThickness="1" BorderBrush="LightGray" Grid.Column="1" >
                                                <TextBlock Text="Количество неявок дней" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                            </Border>

                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <ComboBox SelectedItem="{Binding Path=Fact.Presence}">
                                                <ComboBox.ItemsSource>
                                                    <col:ArrayList>
                                                        <sys:String>Я</sys:String>
                                                        <sys:String>Н</sys:String>
                                                        <sys:String>РВ</sys:String>
                                                        <sys:String>С</sys:String>
                                                        <sys:String>ВМ</sys:String>
                                                        <sys:String>К</sys:String>
                                                        <sys:String>ПК</sys:String>
                                                        <sys:String>ПМ</sys:String>
                                                        <sys:String>ОТ</sys:String>
                                                        <sys:String>ОД</sys:String>
                                                        <sys:String>ОП</sys:String>
                                                    </col:ArrayList>
                                                </ComboBox.ItemsSource>
                                            </ComboBox>
                                            <TextBox Grid.Column="1" Text="{Binding Fact.CountDay}"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="SaveButton" Margin="10" Grid.Row="1" HorizontalAlignment="Right" Click="SaveButton_OnClick">Сохранить</Button>
    </Grid>
</Page>
