        <Label Content="с" HorizontalAlignment="Left" Margin="100,112,0,0" VerticalAlignment="Top" Height="33" Width="44"/>
        <DatePicker HorizontalAlignment="Left" Margin="133,112,0,0" VerticalAlignment="Top" Height="26" Width="135"/>
        <Label Content="по" HorizontalAlignment="Left" Margin="271,112,0,0" VerticalAlignment="Top" Height="33" Width="44"/>
        <DatePicker HorizontalAlignment="Left" Margin="304,112,0,0" VerticalAlignment="Top" Height="26" Width="135" Grid.ColumnSpan="2"/>
        <Label Content="На период" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Height="33" Width="95"/>
        <Label Content="ОКУД" HorizontalAlignment="Left" Margin="160.324,9,0,0" VerticalAlignment="Top" Height="34" Width="63" Grid.Column="1"/>
        <Label Content="ОКПО" HorizontalAlignment="Left" Margin="278.324,9,0,0" VerticalAlignment="Top" Height="34" Width="63" Grid.Column="1"/>
        <ComboBox HorizontalAlignment="Left" Margin="326.324,10,0,0" VerticalAlignment="Top" Width="66" Height="29" Grid.Column="1"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="29" Margin="207,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" IsReadOnlyCaretVisible="True"/>

    </Grid>
