        <ComboBox HorizontalAlignment="Left" Margin="224.324,105,0,0" VerticalAlignment="Top" Width="173" Height="29" Grid.Column="1"/>
        <Label Content="Приказ" HorizontalAlignment="Left" Margin="276,6,0,0" VerticalAlignment="Top"/>
